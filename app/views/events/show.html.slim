script src="http://maps.google.com/maps/api/js?sensor=false"

h1
  = @event.title

.row-fluid
  .span4
    a.thumbnail href=""
      = image_tag(@event.picture_url) if @event.picture?
  .span8
    table.table.table-bordered
      tr
        th
          strong Date Time:
          = @event.date
          ' |
          =@event.time
        th
          strong Entrance:
          = @event.entrance
    p.well
      = @event.description
    #map_canvas
    br
    table.table.table-bordered
      tr
        th
          strong Category:
          = @event.category
        th
          strong Seats:
          = @event.seats
    p
      strong Attendies:
      strong
        = @attendies
= link_to 'Edit', edit_event_path(@event), class: 'btn'
| &nbsp;
= link_to 'Back', events_path, class: 'btn'
- if @event.coordinates.present?
  javascript:
    var latitude = #{@event.coordinates[1]};
    var longitude   = #{@event.coordinates[0]};
    var myLatlng = new google.maps.LatLng(latitude, longitude);
    var myOptions = {
      zoom: 16,
      center: myLatlng,
      mapTypeId: google.maps.MapTypeId.ROADMAP
    };
    var map = new google.maps.Map(document.getElementById("map_canvas"), myOptions);
    var marker = new google.maps.Marker({
          position: myLatlng, 
          map: map,
      title: "#{@event.title}"
     });